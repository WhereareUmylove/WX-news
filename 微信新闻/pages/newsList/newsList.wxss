.topics-main {
  height: 100%;
}
.top-bar {
  height: 72px;
  background: #444;
  width:100%;
  position: fixed;
  top:0;
  z-index:1;
}
.top-bar-item {
  display:inline-block;
  width: 20%;
  color: #80bd01;
  text-align: center;
  line-height: 36px;
  font-size: 14px;
}
.posts-list {
  margin-top: 72px;
}
.posts-item {
  position: relative;
  padding: 5px 0 5px 10px;
  font-size: 14px;
  padding-right: 10px;
  background: #fff;
}
.author {
  overflow: hidden;
  padding-bottom: 5px;
  border-bottom: 1px solid #ccc;
  border-bottom-width: 90%;
}
.author-avatar {
  width: 100%;
  height: 200px;
  border-radius: 3px;
}
.author-name {
  color: #666;
  float: left;
  line-height:30px;
  margin-left:5px;
  font-size: 12px;
}

.posts-last-reply {
  float: right;
  line-height:30px;
  color: #666;
  font-size: 12px;
}


.posts-title {
  color: #2c3e50;
  font-size: 16px;
  line-height: 1.2;
  font-weight: bold;
  padding-bottom: 5px;
}